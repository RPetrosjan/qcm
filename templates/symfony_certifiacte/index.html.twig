    <div class="row">
        <div class="col-md-4 ml-4">
            <div class="list-group" id="list-tab" role="tablist">
                {% for competenceSection in competenceSections %}
                    <a class="list-group-item list-group-item-action" href="{{ path('symfony_certifiacte_section', { '_locale' : app.request.locale ,'id': competenceSection.id }) }}" role="tab" aria-controls="home">{{ competenceSection.title }}</a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
